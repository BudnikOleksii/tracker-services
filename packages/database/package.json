{
  "name": "@tracker/database",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --env-file=.env --import tsx src/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@nestjs/common": "11.1.14",
    "drizzle-orm": "0.45.1",
    "pg": "8.18.0"
  },
  "devDependencies": {
    "@tracker/eslint-config": "workspace:*",
    "@tracker/typescript-config": "workspace:*",
    "@types/pg": "8.16.0",
    "drizzle-kit": "0.31.9",
    "eslint": "9.39.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
